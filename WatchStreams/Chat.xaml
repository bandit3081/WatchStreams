<Window x:Class="WatchStreams.Chat"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chat" Height="335" Width="300" WindowStyle="ToolWindow" WindowStartupLocation="CenterOwner" ResizeMode="CanMinimize">
    <Grid>
        <TextBox x:Name="chatbox" HorizontalAlignment="Left" Margin="10,10,0,46" TextWrapping="Wrap" Width="178"/>
        <Button x:Name="connectBtn" Content="Connect" HorizontalAlignment="Left" Height="34" Margin="193,10,0,0" VerticalAlignment="Top" Width="89" Click="connectBtn_Click"/>
        <TextBox x:Name="sendTextBox" HorizontalAlignment="Left" Margin="10,0,0,10" TextWrapping="Wrap" Width="178" Height="31" VerticalAlignment="Bottom"/>
        <Button x:Name="sendBtn" Content="Post" HorizontalAlignment="Left" Height="34" Margin="193,0,0,7" VerticalAlignment="Bottom" Width="89" Click="sendBtn_Click"/>

    </Grid>
</Window>
